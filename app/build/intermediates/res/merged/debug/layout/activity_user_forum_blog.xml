<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#dedede"
    tools:context="tht.topu.com.tht.ui.fragment.rankFragment.RankFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="false">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:id="@+id/rankToolBar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/forumPostBack"
                        android:layout_width="12dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/back"
                        android:layout_marginTop="18dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="帖子"
                        android:textColor="#030303"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:layout_marginRight="12dp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:id="@+id/userBlogTabLayout"
            android:layout_height="60dp"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/colorGold"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/colorGold"
            app:tabTextColor="@color/colorWhite"
            android:background="#3c3c3c"/>

        <android.support.v4.view.ViewPager
            android:layout_below="@id/userBlogTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userBlogViewPager"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

