<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rankItemLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/rankHighLight"/>

    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:id="@+id/rankTop"
        android:layout_marginStart="18dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/rankNum"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#333"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/rankAvatar"
        android:src="@mipmap/login_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="80dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/rankUserTextView"
        android:layout_marginStart="50dp"
        android:layout_alignStart="@id/rankAvatar"
        android:text="吃不胖的鱼"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:maxWidth="100dp"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="#152024"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:cardElevation="0dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/colorblack">

        <TextView
            android:id="@+id/pointTextView"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:maxWidth="80dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
            android:text="积分:8888888"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>