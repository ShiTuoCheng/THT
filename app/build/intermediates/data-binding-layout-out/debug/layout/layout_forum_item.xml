<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/isDelLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#d4d3d3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="已删除"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="测试测试"
        android:layout_marginTop="12dp"
        android:layout_marginStart="17dp"
        android:textColor="#9b9b9b"/>

    <TextView
        android:id="@+id/forumTitleTextView"
        android:layout_below="@id/tagTextView"
        android:layout_marginStart="17dp"
        android:text="测试测试测试测试测试测试测试测试"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:textColor="#152024"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/forumTitleTextView"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@color/cardview_dark_background" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试测试"
        android:textSize="12sp"
        android:textColor="#3c3c3c"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/userImageView"
        android:layout_toEndOf="@id/userImageView" />
    
    <android.support.v7.widget.CardView

        app:cardElevation="0dp"
        app:cardCornerRadius="2dp"
        android:layout_alignTop="@id/userImageView"
        android:layout_toEndOf="@id/userNameTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        app:cardBackgroundColor="#E6C212"
        android:layout_width="26dp"
        android:layout_height="12dp">

        <TextView
            android:id="@+id/forumVipTextView"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="8sp"
            android:text="VIP:0"/>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/good"
        android:layout_marginEnd="108dp"
        android:id="@+id/goodImageView"
        android:layout_alignBottom="@+id/userNameTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goodNumTextView"
        android:text="999"
        android:textColor="#3c3c3c"
        android:textSize="12sp"
        android:layout_marginStart="27dp"
        android:layout_alignBottom="@id/goodImageView"
        android:layout_alignStart="@id/goodImageView" />

    <ImageView
        android:id="@+id/replyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/comment"
        android:layout_alignBottom="@+id/goodNumTextView"
        android:layout_toEndOf="@+id/goodNumTextView"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replyNumTextView"
        android:text="999"
        android:textColor="#3c3c3c"
        android:textSize="12sp"
        android:layout_marginStart="27dp"
        android:layout_alignBottom="@id/replyImageView"
        android:layout_alignStart="@id/replyImageView" />

    <ImageView

        android:layout_marginTop="14dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/tagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cornerImageView"/>

    <ImageView

        android:layout_marginTop="14dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/cornerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cornerImageView1"/>

</RelativeLayout>