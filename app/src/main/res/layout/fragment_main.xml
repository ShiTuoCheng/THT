<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#dedede"
    tools:context="tht.topu.com.tht.ui.fragment.mainFragment.MainFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="false">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:id="@+id/mainToolBar">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="24dp"
                            android:src="@mipmap/logo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>


                <com.youth.banner.Banner

                    android:id="@+id/mainBanner"
                    android:layout_below="@id/mainToolBar"
                    android:layout_width="match_parent"
                    app:indicator_drawable_selected="@color/colorGold"
                    app:indicator_drawable_unselected="@color/colorGray"
                    android:layout_height="160dp"/>
            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/mainTabLayout"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/colorGold"
            app:tabIndicatorHeight="3dp"
            app:tabMinWidth="72dp"
            app:tabSelectedTextColor="@color/colorGold"
            app:tabTextColor="@color/colorWhite"
            android:background="#3c3c3c"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_below="@id/mainTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh_layout">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainViewPager"/>

        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
